# Example environment configuration
# Copy this to .env and fill in your actual credentials

CHARTINK_EMAIL=your_email@example.com
CHARTINK_PASSWORD=your_password

# Notification Platform Toggles
ENABLE_DISCORD=true
ENABLE_TELEGRAM=false

# Discord Configuration
DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
PING_HERE=true

# Telegram Configuration
TELEGRAM_BOT_TOKEN=123456789:YOUR_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_CHAT_ID_HERE

# Multi-Scan Configuration
SCAN_URL_1=https://chartink.com/screener/your-first-scan
SCAN_NAME_1=EMA scan
ENABLE_SCAN_1=true

SCAN_URL_2=https://chartink.com/screener/your-second-scan
SCAN_NAME_2=BB Scalping Scan
ENABLE_SCAN_2=true

SCAN_URL_3=https://chartink.com/screener/your-third-scan
SCAN_NAME_3=1 hour EMA Scan
ENABLE_SCAN_3=true

# Bot Settings
REFRESH_MINUTES=15
ALWAYS_NOTIFY=true
PING_HERE=true
HEADLESS=true

# Simulation Mode (for testing)
SIMULATE=false
SIMULATION_RUNS=1
SIMULATION_INTERVAL_SECONDS=5

# Optional: Custom paths
# COOKIES_PATH=cookies.json
# MENTION_ROLE_ID=
# MENTION_USER_ID=
